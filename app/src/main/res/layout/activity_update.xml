<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="48dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_checker"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Status Text -->
                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checking_for_updates"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Update Info -->
                <TextView
                    android:id="@+id/textUpdateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_up_to_date"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="12dp">

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download_update"
                android:visibility="gone"
                app:icon="@drawable/ic_file_upload_24"
                style="@style/Widget.Material3.Button" />

            <!-- Install Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonInstall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/install_update"
                android:visibility="gone"
                app:icon="@drawable/ic_play_arrow_24"
                style="@style/Widget.Material3.Button" />

            <!-- View Release Notes Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewReleaseNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_release_notes"
                android:visibility="gone"
                app:icon="@drawable/ic_info_24"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Check Again Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCheckAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_again"
                android:visibility="gone"
                app:icon="@drawable/ic_refresh_24"
                style="@style/Widget.Material3.Button.OutlinedButton" />



        </LinearLayout>

        <!-- Privacy Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_privacy_notice"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView> 