<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/colorSurface"
    android:layout_marginBottom="4dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_app_default"
        android:contentDescription="App icon" />

    <!-- App Info and Dropdown Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_cooldown_app_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="4dp" />

        <!-- Package Name -->
        <TextView
            android:id="@+id/packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_cooldown_package"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <!-- Cooldown Time Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                            android:hint="@string/hint_cooldown_time"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/purple_200"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/cooldownTimeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/item_cooldown_no_cooldown" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Delete Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="@string/item_cooldown_delete"
        android:textSize="16sp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@color/white_100"
        style="@style/Widget.Material3.Button.IconButton"
        app:icon="@drawable/ic_delete_24"
        app:iconTint="@color/white_100" />

</LinearLayout> 