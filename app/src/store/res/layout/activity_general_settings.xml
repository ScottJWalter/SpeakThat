<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".GeneralSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Theme Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_theme_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Dark Mode Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_dark_mode"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_dark_mode_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Performance Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_app_behavior_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Battery Optimization Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_battery_optimization"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_battery_optimization_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchBatteryOptimization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                    <!-- Auto-Start Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_auto_start"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_auto_start_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchAutoStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>



                    <!-- Background Processing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_aggressive_background"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_aggressive_background_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchAggressiveProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                    <!-- Service Restart Policy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/general_service_restart_policy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/general_service_restart_description"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginBottom="12dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupRestartPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radioRestartNever"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/general_never_restart"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_primary"
                                android:buttonTint="@color/radio_button_color"
                                app:buttonTint="@color/radio_button_color"
                                android:paddingVertical="4dp" />

                            <RadioButton
                                android:id="@+id/radioRestartOnCrash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/general_restart_on_crash"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_primary"
                                android:buttonTint="@color/radio_button_color"
                                app:buttonTint="@color/radio_button_color"
                                android:paddingVertical="4dp" />

                            <RadioButton
                                android:id="@+id/radioRestartPeriodic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/general_restart_periodically"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_primary"
                                android:buttonTint="@color/radio_button_color"
                                app:buttonTint="@color/radio_button_color"
                                android:paddingVertical="4dp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Notification Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_notification_settings_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Persistent Notification -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_persistent_notification"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_persistent_notification_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchPersistentNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                    <!-- Notification While Reading -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_notification_while_reading"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_notification_while_reading_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchNotificationWhileReading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Data Management Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_data_management_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Export Configuration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/exportConfigButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_export_configuration"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                                            android:text="@string/general_export_configuration_description"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrow_right"
                            android:textSize="18sp"
                            android:textColor="@color/purple_card_text_secondary" />

                    </LinearLayout>

                    <!-- Import Configuration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/importConfigButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_import_configuration"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                                            android:text="@string/general_import_configuration_description"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrow_right"
                            android:textSize="18sp"
                            android:textColor="@color/purple_card_text_secondary" />

                    </LinearLayout>

                    <!-- Clear All Data -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/clearDataButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/button_clear_all_data"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                                            android:text="@string/general_reset_settings"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrow_right"
                            android:textSize="18sp"
                            android:textColor="@color/purple_card_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Test Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_test_settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <!-- Test Settings Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/testSettingsButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_verify_settings"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/general_verify_settings_description"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="›"
                            android:textSize="24sp"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 